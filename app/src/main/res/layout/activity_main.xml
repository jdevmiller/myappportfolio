<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/main_page_title"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:textColor="#212121" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/spotify_streamer_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/spotify_streamer_app_name"
            android:onClick="spotifyButton" />

        <Button
            android:id="@+id/scores_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/scores_app_name"
            android:onClick="scoresButton" />


        <Button
            android:id="@+id/library_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/library_app_name"
            android:onClick="libraryButton" />

        <Button
            android:id="@+id/build_bigger_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/build_bigger_app_name"
            android:onClick="buildBiggerButton" />


        <Button
            android:id="@+id/xyz_reader_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/xyz_reader_app_name"
            android:onClick="xyzButton" />


        <Button
            android:id="@+id/capstone_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="#f44336"
            android:text="@string/capstone_app_name"
            android:onClick="capstoneButton" />
    </LinearLayout>


</LinearLayout>
